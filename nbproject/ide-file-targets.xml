<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="ImageJ-IDE">
    <target name="compile-selected-files-in-plugins">
        <fail unless="files">Must set property 'files'</fail>
        <javac destdir="plugins" includes="${files}" source="1.7" srcdir="plugins">
            <classpath path="ij.jar;jiffy_jar;"/>
        </javac>
    </target>
    <target name="compile-selected-files-in-src">
        <fail unless="files">Must set property 'files'</fail>
        <!-- TODO decide on and define some value for ${build.classes.dir} -->
        <mkdir dir="${build.classes.dir}"/>
        <javac destdir="${build.classes.dir}" includes="${files}" source="1.8" srcdir="src"/>
    </target>
    <target name="compile-selected-files-in-opencv_453">
        <fail unless="files">Must set property 'files'</fail>
        <javac destdir="opencv_453" includes="${files}" source="1.8" srcdir="opencv_453"/>
    </target>
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://www.netbeans.org/kb/articles/freeform-config.html#runsingle) -->
    <target name="debug-selected-file-in-plugins">
        <fail unless="debug.class">Must set property 'debug.class'</fail>
        <ant antfile="build.xml" inheritall="false" target="build"/>
        <path id="cp">
            <pathelement path="ij.jar;plugins/_ijJif.jar"/>
        </path>
        <nbjpdastart addressproperty="jpda.address" name="ImageJ" transport="dt_socket">
            <classpath refid="cp"/>
        </nbjpdastart>
        <java classname="${debug.class}" fork="true">
            <classpath refid="cp"/>
            <jvmarg value="-agentlib:jdwp=transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
</project>
